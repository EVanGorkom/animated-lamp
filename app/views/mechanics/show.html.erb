<h1><%= @mechanic.name %>'s Show Page</h1>

<h4><%= @mechanic.name %>'s Details:</h4>
<p>Name: <%= @mechanic.name %></p>
<p>Years of Experience: <%= @mechanic.years_experience %></p></br>

<h4>Rides Currently Servicing:</h4>
<div class="ride-list">
  <ul>
    <% @mechanic.working_ride_list.each do |ride_name| %>
      <li><%= ride_name %></li>
    <% end %>
  </ul>
</div>

<h4>Add a ride to workload:</h4>
<%= form_with url: "/ride_mechanics/", method: :post do |form| %>
  <p><%= form.label :ride_id, "Ride Id: " %>
  <%= form.hidden_field :mechanic_id, value: @mechanic.id %>
  <%= form.text_field :ride_id, required: true %></p>

  <p><%= form.submit "Submit" %></p>
<% end %>